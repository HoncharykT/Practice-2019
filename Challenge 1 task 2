package Сhallange1;

import java.util.Scanner;

public class task2 {
	public static void main(String[] args) {
Scanner in=new Scanner(System.in);
System.out.println("Введіть індекс числа Фібоначчі");
int n=in.nextInt();
int a=1; int b=1;
System.out.print("Число Фібоначчі з індексом "+n+"=");
if(n==0 || n==1){
	System.out.println("1");
}else{
int temp;
for (int i=1;i<n;i++){
	temp=a+b;
	a=b;
	b=temp;
}}
System.out.println(b);
};
}
